# Docker Compose Environment Variables
COMPOSE_PROJECT_NAME=university_cms

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=university_cms
DB_USERNAME=university_cms
DB_PASSWORD=university_cms_password
DB_ROOT_PASSWORD=root_password

# Ports
NGINX_PORT=80
MYSQL_PORT=3306
REDIS_PORT=6379
FRONTEND_PORT=8080

# Application Settings
APP_ENV=local
APP_URL=http://localhost
APP_DEBUG=true

CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Development Performance Settings
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=8080
VITE_DEV_SERVER_HMR=true

# Disable unnecessary services in development
MAIL_MAILER=log
LOG_CHANNEL=stack
LOG_LEVEL=debug
